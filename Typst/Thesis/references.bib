@article{Li2021,
title = {Porous metal–organic frameworks for methane storage and capture: status and challenges},
journal = {New Carbon Materials},
volume = {36},
number = {3},
pages = {468-496},
year = {2021},
issn = {1872-5805},
doi = {https://doi.org/10.1016/S1872-5805(21)60034-3},
url = {https://www.sciencedirect.com/science/article/pii/S1872580521600343},
author = {Dong-ze Li and Lei Chen and Gang Liu and Zi-yun Yuan and Bing-fan Li and Xu Zhang and Jia-qiang Wei},
keywords = {Metal-organic frameworks, Methane, Adsorption, Storage, Capture},
abstract = {In the process of global transition to a sustainable low-carbon economy, the two major low-carbon energy technologies, namely, methane (CH4) storage and methane capture face the same challenge, that is, the lack of efficient adsorbents. Metal-organic framework (MOF) materials have potential value in the field of gas adsorption storage because of their high specific surface area, good porosity, and adjustable pore structure. In this study, the structural design and synthesis methods of MOFs are introduced, and the research progress and problems associated with MOF materials in methane storage and capture are reviewed. The current research status of methane storage at high pressure is introduced in terms of volumetric and gravimetric uptake. For methane capture at atmospheric pressure, emphasis is placed on CH4/N2 and CO2/CH4 separation and methane capture technologies. Finally, the problems and challenges of using MOF materials to achieve efficient methane storage and capture are analyzed and future prospects are presented.}
}