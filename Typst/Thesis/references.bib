@article{Trinh2014,
  author = {Trinh, Thuat T. and Vlugt, Thijs J. H. and Kjelstrup, Signe},
  title = {Thermal conductivity of carbon dioxide from non-equilibrium molecular dynamics: A systematic study of several common force fields},
